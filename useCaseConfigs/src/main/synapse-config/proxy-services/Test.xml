<?xml version="1.0" encoding="UTF-8"?>
<proxy name="PetStoreProxy" startOnLoad="true" transports="http https" xmlns="http://ws.apache.org/ns/synapse">
    <target>
        <endpoint>
            <address uri="https://petstore.swagger.io/v2/pet">
                <suspendOnFailure>
                    <initialDuration>-1</initialDuration>
                    <progressionFactor>1</progressionFactor>
                </suspendOnFailure>
                <markForSuspension>
                    <retriesBeforeSuspension>0</retriesBeforeSuspension>
                </markForSuspension>
            </address>
        </endpoint>
        <inSequence>
            <property expression="//id/text()" name="id" scope="default" type="STRING"/>
            <payloadFactory media-type="json">
                <format>{"id":$1}</format>
                <args>
                    <arg evaluator="xml" expression="get-property('id')"/>
                </args>
            </payloadFactory>
        </inSequence>
        <outSequence>
            <payloadFactory media-type="xml">
                <format>
                    <AddPetResponse xmlns="">
                        <id>$1</id>
                        <photoUrls/>
                        <tags/>
                    </AddPetResponse>
                </format>
                <args>
                    <arg evaluator="json" expression="$.id"/>
                </args>
            </payloadFactory>
            <respond/>
        </outSequence>
        <faultSequence/>
    </target>
    <publishWSDL key="conf:/custom/testV3.wsdl" preservePolicy="true"/>
</proxy>
